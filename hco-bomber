# Script Starting
msg() {
	printf "${green}[${nc}+${green}] ${white}${1}\n${nc}"
}
errormsg() {
        printf "${red}[!] ${white}${1}\n${nc}"
}
askmsg(){
	printf "${yellow}[?] ${white}${1}\n${nc}"
}
